{
	"name": "mini-claw",
	"version": "0.1.0",
	"description": "Lightweight Telegram bot for persistent AI conversations using Pi",
	"type": "module",
	"main": "dist/index.js",
	"scripts": {
		"dev": "tsx watch src/index.ts",
		"build": "tsc",
		"start": "node dist/index.js",
		"typecheck": "tsc --noEmit",
		"lint": "eslint src/",
		"test": "vitest run",
		"test:watch": "vitest",
		"test:coverage": "vitest run --coverage"
	},
	"dependencies": {
		"dotenv": "^16.4.7",
		"grammy": "^1.35.0"
	},
	"devDependencies": {
		"@eslint/js": "^9.39.2",
		"@types/node": "^22.13.4",
		"@vitest/coverage-v8": "^4.0.18",
		"eslint": "^9.39.2",
		"globals": "^17.2.0",
		"memfs": "^4.56.10",
		"tsx": "^4.19.2",
		"typescript": "^5.7.3",
		"typescript-eslint": "^8.54.0",
		"vitest": "^4.0.18"
	},
	"engines": {
		"node": ">=22"
	}
}
